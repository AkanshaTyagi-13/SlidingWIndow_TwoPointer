class Solution {
    public int maxScore(int[] cardPoints, int k) {
        int maxScore=Integer.MIN_VALUE, sum=0;
        for(int i=0;i<k;i++){
            sum+=cardPoints[i];
        }
        maxScore=sum;
        int j=k-1;
        int last=cardPoints.length-1;
        for(int i=0;i<k;i++){
            sum=sum-cardPoints[j--]+cardPoints[last-i];
            maxScore=Math.max(maxScore,sum);
        }
        return maxScore;
    }
}
